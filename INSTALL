#!/bin/bash
 git checkout f2e7e81bda653c1f2cb3b27cf867e9195d184ddc
./bootstrap.py
yay -Q | grep luajit || yay -S luajit --needed
./waf configure --prefix=~/.local --disable-libmpv-shared --disable-build-date --disable-debug-build --disable-manpage-build --disable-manpage-build --disable-html-build --disable-pdf-build --disable-cplugins --disable-zsh-comp --disable-asm --disable-test --disable-clang-database --disable-android --disable-egl-android --disable-swift --disable-uwp --disable-win32-internal-pthreads --disable-libsmbclient --disable-javascript --disable-vapoursynth-lazy --disable-vapoursynth --disable-ios-gl --disable-rpi --disable-mali-fbdev --disable-vaapi --disable-vaapi-x11 --disable-drm --disable-vaapi-x-egl --disable-tv --disable-tv-v4l2 --disable-libv4l2 --disable-audio-input --disable-dvbin --disable-apple-remote --disable-macos-touchbar --disable-macos-cocoa-cb --disable-d3d11 --disable-crossc --disable-shaderc --disable-vaapi --disable-vaapi-x11 --disable-vaapi-wayland --disable-vaapi-drm --disable-vaapi-glx --disable-vaapi-x-egl --disable-caca --disable-egl-drm --disable-gl-wayland --disable-gl-win32 --disable-gl-dxinterop --disable-egl-angle --disable-egl-angle-lib --disable-egl-angle-win32 --disable-gl-cocoa --disable-cocoa --disable-coreaudio --disable-audiounit --disable-wasapi  --disable-rsound --disable-libbluray --disable-dvdread --disable-dvdnav --disable-cdda --disable-iconv --disable-libmpv-static --disable-vulkan
./waf install